          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const j = pm.response.json();",
                  "if (j.data && j.data.token) pm.collectionVariables.set('admin_token', j.data.token);",
                  "pm.test('Token captured', function () {",
                  "  pm.expect(pm.collectionVariables.get('admin_token')).to.not.be.empty;",
                  "});"
